  "Shape: At Mark": {
    "index": "1",
    "category": "sorcery",
    "sections": [
      {
        "type": "title",
        "value": "Shape: At Mark"
      },
      {
        "type": "text",
        "value": "This shape activates the spell where I placed my mark. To do this, I need a Rune of Marking in my offhand. The range is capped at 500 blocks, but I can increase that range with Magnitude."
      },
      {
        "type": "text",
        "value": "When I use a Spell with this Shape and don't have a Rune of Marking in my off-Hand, I cast the spell in the location, saved by the mark spell."
      }
    ],
    "related_recipes": [
      {
        "type": "spell_part",
        "location": "dragonmagicandrelics:shapes/atmark"
      }
    ]
  },

